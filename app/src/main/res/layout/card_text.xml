<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/activity_std_margin"
    android:layout_marginStart="@dimen/activity_std_margin"
    android:layout_marginEnd="@dimen/activity_std_margin">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/cardview_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_std_margin"
            android:textSize="@dimen/activity_small_text" />

    </LinearLayout>

</android.support.v7.widget.CardView>
